{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "tailwind.config.*",
    "postcss.config.*"
  ],
  "compilerOptions": {
    "composite": true,
    "strict": true,

    "module": "ESNext",
    "moduleResolution": "Bundler",

    "target": "es2022",
    "lib": ["es2022", "es2023.array", "es2023.collection", "dom"],

    "types": ["node"]
  }
}
