{
  "extends": "@tsconfig/node20/tsconfig.json",

  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,

    "target": "es2022",
    "lib": ["es2022", "es2023.array", "es2023.collection", "dom"],

    "module": "ES2022",
    "moduleResolution": "Node",

    "strict": true,
    "verbatimModuleSyntax": true,

    "types": ["vitest/globals"],

    "paths": {
      "@server/*": ["./src/*"],
      "@tests/*": ["./tests/*"]
    }
  }
}
