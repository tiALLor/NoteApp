{
  "extends": "@tsconfig/node22/tsconfig.json",

  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,

    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "Node",

    "strict": true,
    "verbatimModuleSyntax": true,

    "types": ["vitest/globals"],

    "paths": {
      "@server/*": ["./src/*"],
      "@tests/*": ["./tests/*"]
    }
  }
}
